<h1>Lista de produtos</h1>

    <div class="products">
     {{#each products}}
      <div class="product">
        <img src="{{this.image}}" alt="{{this.description}}">
        <h3>{{this.name}}</h3>
        <p>{{this.price}}</p>
        <div class="actions">
           <a href="/products/{{this._id}}">Detalhes</a>
           <a href="/products/edit/{{this._id}}">Editar</a>
            <a href="/products/remove/{{this._id}}">Remover</a>
        </div>
      </div>
      {{/each}}
    </div>
